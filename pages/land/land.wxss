/* pages/land/land.wxss */
page {
  background-color: #f0f1ea;
}
.container {
  margin-top: 20px;
  padding: 40rpx 20rpx;
}
.empty-status {
  width: 100%;
  display: flex;
  padding-top: 300rpx;
  flex-direction: column;
  align-items: center;
}
.empty-status image {
  width: 50%;
  height: 300rpx;
  opacity: 0.6;
}
.empty-text {
  color: #8cc269;
}
.card {
  border-radius: 5px;
  margin-bottom: 20rpx;
}
.card {
  background-color: #fff;
}
.card > image {
  width: 100%;
  height: 400rpx;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
}

.text {
  padding: 20rpx;
}
.title {
  font-weight: 600;
}
.address {
  padding-top: 20rpx;
  font-size: 14px;
  color: rgba(65, 65, 65, 0.363);
}