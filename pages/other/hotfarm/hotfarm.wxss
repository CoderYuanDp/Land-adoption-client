/* pages/other/hotfarm/hotfarm.wxss */
page {
  background-color: #f7fdf9;
}
.container {
  padding: 20rpx;
}
.header-container {
  padding: 40px 0 40px 0;
  height: 300px;
  background-image: linear-gradient(to bottom, #e7feea, #f7fdf9);
}
.head-title {
  padding: 0 10px;
  margin-top: 20px;
  font-size: 20px;
  font-weight: 500;
  color: #000;
}
.item {
  background-color: #e7feea;
  padding: 10px;
  border-radius: 5rpx;
  margin: 0 40px;
  text-align: center;
  margin-bottom: 40rpx;
  border-radius: 8px;
  box-shadow: 0 0 6px 2px rgba(196, 196, 196, 0.438);
}
.item image {
  width: 80%;
}
.text {
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.name {
  font-weight: 600;
}
.climate {
  font-size: 12px;
}
.address {
  color: #cacac8;
  font-size: 12px;
  margin-top: 10px;
}

.hot-title {
  padding: 0 10px;
  margin-top: 20px;
  font-size:30px;
  font-weight: 800;
  color: #000;
}
.t-t {
  font-size: 16px;
  margin-top: 10px;
  margin-left: 10px;
  padding: 0 8px;
  width: 160px;
  height: 30px;
  line-height: 30px;
  border: 1px solid #000;
  border-radius: 20px;
}
.bg-i {
  float: right;
  position: relative;
  top: -20px;
}