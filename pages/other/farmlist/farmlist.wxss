/* pages/other/farmlist/farmlist.wxss */
page {
  background-color: #f5f5f5;
}
.head-img {
  width: 100%;
  height: 700rpx;
}
.container {
  padding: 20rpx 40rpx;
  margin-top: -120px;
  position: relative;
}
.latlng {
  height: 180rpx;
  background-color: rgba(255, 255, 255, 0.822);
  color: #fff;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  margin-bottom: 50rpx;
  padding: 0 20rpx;
}
.latlng > image {
  width: 60rpx;
  height: 80rpx;
  margin-right: 40rpx;
}
.item {
  background-color: #ffffff;
  color: #000;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10px;
  box-shadow: 0 2px 3px #afafaf;
}
.item > image {
  width: 100%; 
  height: 300rpx;
  border-radius: 10rpx;
}

.tip {
  color: #76cc53;
  font-size: 12px;
  margin-top: 10px;
}

.info {
  font-size: 12px;
  margin-top: 10px;
}

.lat, .lng, .adres {
  font-size: 14px;
  font-weight: 600;
  max-width: 500rpx;
  color: #000;
}

.adres {
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}