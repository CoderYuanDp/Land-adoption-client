/* pages/other/search/search.wxss */

.container {
  padding: 20rpx 40rpx;
}
.search-box {
  padding: 0 20px;
  overflow: hidden;
  border-radius: 10rpx;
}
.search-box view {
  border-radius: 10rpx;
}
.item {
  background-color: #f7fff4;
  color: #000000;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10px;
  box-shadow: 0 1px 4px #94a862;
}
.item > image {
  width: 100%; 
  height: 300rpx;
  border-radius: 10rpx;
}

.tip {
  color: #76cc53;
  font-size: 12px;
  margin-top: 10px;
}

.info {
  font-size: 12px;
  margin-top: 10px;
}
.bom-tip {
  font-size: 12px;
  color: #b3b3b3;
  text-align: center;
}