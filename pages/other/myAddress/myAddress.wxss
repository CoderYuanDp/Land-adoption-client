/* pages/other/myAddress/myAddress.wxss */
page {
  background-color: #f4f5ed;
}
.container {
  padding: 20rpx;
}

.no-address {
  font-size: 14px;
  text-align: center;
  color: #b3b3b3;
  background-color: #fff;
  margin-top: 15px;
  padding: 20rpx;
  border-radius: 6px;
}
.address {
  background-color: #fff;
  margin-top: 15px;
  padding: 20rpx;
  border-radius: 6px;
}
.i-c {
  display: flex;
  margin-top: 20px;
}
.add-input {
  display: inline-block;
  height: 30px;
  width: 80%;
  border-radius: 5px;
  text-align: left;
  padding-left: 8px;
  border: 1px solid #c6f559;
}
.select-btn {
  display: inline-block;
  height: 30px;
  width: 15%;
  text-align: center;
  line-height: 30px;
  font-size: 14px;
  color: #000;
  margin-left: 8px;
  color: #8a8a8a;
  border-radius: 5px;
  background-color: #f1f1f1;
}
.add-btn {
  background-color: #c1fc52;
  color: #000;
  height: 40px;
  line-height: 40px;
  width: 50%;
  margin: 0 auto;
  font-size: 16px;
  text-align: center;
  border-radius: 8px;
  font-weight: 800;
  margin-top: 30px;
}
.s-d {
  color: #000;
}
.address image{
  width: 40px;
  height: 40px;
}
.s-d {
  height: 40px;
  line-height: 40px;
  font-size: 14px;
}