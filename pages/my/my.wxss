/* pages/my.wxss */
page {
  background-image: linear-gradient(to bottom, #fff, #e9e9e9);
}
.avcter {
  width: 100%;
  height: 180px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  backdrop-filter: blur(5px);
}
.avcter::after {
  content: '';
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: inherit;
  filter: blur(5px);
  z-index: -1;
}

.nick-avcter > image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin: auto 0;
}
.nick-avcter > view {
  color: #626c2f;
  font-weight: 800;
  text-align: center;
  /* color: #000; */
}
.container {
  padding: 20rpx;
  position: relative;
  top: -60rpx;
  /* background-color: rgba(248, 248, 248, 85%); */
}

.count {
  height: 150rpx;
  margin: 20rpx 0;
  padding: 0 40rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 5px;
  box-shadow: 0 0 5px #c2c2c2;
}

.count-item {
  vertical-align: middle;
  display: flex;
  align-items: center;
  color: #000;
  font-size: 18px;
  font-weight: 1000;
}

.iten-count {
  font-size: 30px;
  font-weight: 200;
  padding: 0 10rpx;
}
.set-item-container {
  padding: 20px 20rpx;
  background-color: #fff;
  border-radius: 5px;
}
.set-item {
  height: 80rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.set-item view {
  height: 80rpx;
  line-height: 80rpx;
}
.icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
